{
  "name": "pr-review-priority-extension",
  "version": "1.0.1",
  "description": "Set priorities for your GitHub PR review comments",
  "main": "index.js",
  "scripts": {
    "start": "webpack --config webpack/webpack.dev.js --watch",
    "build": "webpack --config webpack/webpack.prod.js",
    "clean": "rimraf dist",
    "test": "npx jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "author": "Stackie Jia <stackie@mindhand.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mindhand-io/pr-review-priority-extension.git"
  },
  "dependencies": {
    "jquery": "^3.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.0",
    "@commitlint/config-conventional": "^9.0.0",
    "@mindhand-io/eslint-config": "^3.1.0",
    "@types/chrome": "^0.0.121",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/jest": "^26.0.4",
    "@types/jquery": "^3.5.0",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "copy-webpack-plugin": "^6.0.3",
    "eslint": "^7.4.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2 ",
    "ts-jest": "^26.1.1",
    "ts-loader": "^8.1.0",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
